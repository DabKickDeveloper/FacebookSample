<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/cotainer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/user_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/name_fields"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="User Name" />

                        <com.dabkick.partner.fb.CustomEdTxt
                            android:id="@+id/user_name"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_toRightOf="@+id/name"
                            android:imeOptions="actionNext"
                            android:inputType="text" />

                    </RelativeLayout>

                    <!--<RelativeLayout-->
                        <!--android:id="@+id/profile_pic_fields"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_below="@+id/name_fields"-->
                        <!--android:layout_marginTop="15dp">-->

                        <!--<TextView-->
                            <!--android:id="@+id/pic"-->
                            <!--android:layout_width="60dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_centerVertical="true"-->
                            <!--android:text="Picture" />-->


                        <!--<com.dabkick.partner.fb.CustomEdTxt-->
                            <!--android:id="@+id/pic_path"-->
                            <!--android:layout_width="200dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginLeft="30dp"-->
                            <!--android:layout_toRightOf="@+id/pic"-->
                            <!--android:imeOptions="actionNext"-->
                            <!--android:inputType="text" />-->

                    <!--</RelativeLayout>-->

                    <RelativeLayout
                        android:id="@+id/unique_fields"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_fields"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/id"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="right"
                            android:text="Facebook ID" />


                        <TextView
                            android:id="@+id/un_id"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="30dp"
                            android:layout_toRightOf="@+id/id"
                            android:gravity="center_vertical"
                            android:hint="Your facebook ID will appear here"/>

                    </RelativeLayout>

                </RelativeLayout>




            </RelativeLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:visibility="visible"
                android:layout_below="@+id/container"
                android:layout_centerHorizontal="true">

                <com.facebook.login.widget.LoginButton
                    android:layout_centerHorizontal="true"
                    android:id="@+id/login_button"
                    android:layout_below="@+id/container"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/reg_btn"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:text="register" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
